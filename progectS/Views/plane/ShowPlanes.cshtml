@model IEnumerable<progectS.Models.Plane>

@{
    ViewData["Title"] = "התוכניות שלי";
}

<h1>התוכניות של @DAL.Get.User.FuulName</h1>

<p>
    <a asp-controller="User" asp-action="AddPlane">תוכנית חדשה</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("ערוך תוכנית", "Edit", new { id=item.ID}) |
                @Html.ActionLink("פרטי תוכנית", "Details", new { id = item.ID }) |
                @Html.ActionLink("מחיקת תוכנית", "Delete", new { id = item.ID })
            </td>
        </tr>
}
    </tbody>
</table>
